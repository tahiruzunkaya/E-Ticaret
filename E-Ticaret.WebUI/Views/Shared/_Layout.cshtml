    <!-- start-smoth-scrolling -->
    <!-- here stars scrolling icon -->
    <script>
        $(document).ready(function () {

            $(".onActive:first-child").addClass("active");

            var defaults = {
                containerID: 'toTop', // fading element id
                containerHoverID: 'toTopHover', // fading element hover id
                scrollSpeed: 1200,
                easingType: 'linear'
            };
            $().UItoTop({
                easingType: 'easeOutQuart'
            });
            $(".register").hide();
            $("#registerClick").on("click", function () {

                $(".login").hide();
                $(".register").show();

            });
            $("#loginClick").on("click", function () {

                $(".login").show();
                $(".register").hide();


            });
            $("#registerClick1").on("click", function () {

                $(".login").hide();
                $(".register").show();

            });
            $("#loginClick1").on("click", function () {

                $(".login").show();
                $(".register").hide();


            });
            $(".registerReg").click(function () {

                var user = {

                    UserName: $("#UserNameReg").val(),
                    Password: $("#PasswordReg").val(),
                    Name: $("#NameReg").val(),
                    SurName: $("#SurNameReg").val(),
                    Email: $("#EmailReg").val()

                };

                $.post("/Home/Register", user, function (sonuc) {
                    alert(sonuc);
                    location.reload();
                });

            });
            $('.carousel').carousel();
            $.get("/Home/GetCategories", function (data) {
                var data = JSON.parse(data);

                for (var i = 0; i < data.length; i++) {
                    $(".Categories").append('<a class="nav-link" href="/Home/Categories/' + data[i].CategoryId + '">' + data[i].CategoryName + '</a>')
                    $("#categories").append('<li> <a href="/Home/Categories/' + data[i].CategoryId + '">' + data[i].CategoryName + '</a> </li>');
                }
            });
            $(".cevap").hide();
            $("#searchkey").keyup(function () {
                $(".cevap").show();
                $(".cevaplist").html(" ");
                var keys = {
                    key: $("#searchkey").val()
                };
                $.post("/Home/GetSearch",keys, function (data) {

                    var data = JSON.parse(data);

                    for (var i = 0; i < data.length; i++) {
                        $(".cevaplist").append("<li><a style='color:black !important' href='/Home/ProductDetail/"+data[i].ProductId+"'><img style='width:50px; height:50px; margin:3px' src='/vendor/images/"+data[i].Image+"'/>" + data[i].ProductName + "</a></li>");
                    }


                });
            });

           
            $("#login").click(function () {
                var user = {
                    UserName: $("#Username").val(),
                    Password: $("#Password").val()
                }
                $.post("/Home/Login", user, function (sonuc) {

                    alert(sonuc);
                    location.reload();

                });
            });

           
        });
    </script>
