@model List<Product>
@{
    ViewData["Title"] = "Index";
}

<div class="left-ads-display col-lg-9">
    <div class="row">

        @foreach (var item in Model)
        {
            <div class="col-lg-4 col-md-6 col-sm-6 product-men women_two">
                <div class="product-toys-info">
                    <div class="men-pro-item">
                        <div class="men-thumb-item">
                            <img src="~/vendor/images/@item.Image" class="img-thumbnail img-fluid" alt="">
                            <div class="men-cart-pro">
                                <div class="inner-men-cart-pro">
                                    <a href="/Home/ProductDetail/@item.ProductId" class="link-product-add-cart">Quick View</a>
                                </div>
                            </div>
                            <span class="product-new-top">New</span>
                        </div>
                        <div class="item-info-product">
                            <div class="info-product-price">
                                <div class="grid_meta">
                                    <div class="product_price">
                                        <h4>
                                            <a href="single.html">@item.ProductName</a>
                                        </h4>
                                        <div class="grid-price mt-2">
                                            @if (item.SalePrice > 0)
                                            {


                                                <span class="money "><del>@item.Price ₺</del> @item.SalePrice ₺</span>
                                            }
                                            else
                                            {
                                                <span class="money ">
                                                    @item.Price ₺
                                                </span>
                                            }
                                        </div>
                                    </div>
                                    <ul class="stars">
                                        <li>
                                            <a href="#">
                                                <i class="fas fa-star"></i>
                                            </a>
                                        </li>
                                        <li>
                                            <a href="#">
                                                <i class="fas fa-star"></i>
                                            </a>
                                        </li>
                                        <li>
                                            <a href="#">
                                                <i class="fas fa-star"></i>
                                            </a>
                                        </li>
                                        <li>
                                            <a href="#">
                                                <i class="fas fa-star"></i>
                                            </a>
                                        </li>
                                        <li>
                                            <a href="#">
                                                <i class="far fa-star-half-o"></i>
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                                <div class="toys single-item hvr-outline-out">
                                    <form action="#" method="post">
                                        <input type="hidden" name="cmd" value="_cart">
                                        <input type="hidden" name="add" value="1">
                                        <input type="hidden" name="shipping" value="@item.Image">
                                        <input type="hidden" name="shipping2" value="@item.Stock | @item.ProductId">
                                        <input type="hidden" name="toys_item" value="@item.ProductName">
                                        <input type="hidden" name="amount" value="
                                               @if (item.SalePrice> 0)
                                        {
                                        @item.SalePrice
                                        }
                                        else {
                                        @item.Price
                                        }

                                        ">
                                        @if (item.Stock > 0)
                                        {

                                            <button type="submit" class="toys-cart ptoys-cart">
                                                <i class="fas fa-cart-plus"></i>
                                            </button>
                                        }
                                        else
                                        {
                                            <p style="color:red">Out of Stock</p>
                                        }
                                        @if (User.Identity.IsAuthenticated)
                                        {

                                            <a style="color:red" href="/Home/Fav/@item.ProductId"> Fav </a>
                                        }
                                    </form>
                                </div>
                            </div>
                            <div class="clearfix"></div>
                        </div>
                    </div>
                </div>
            </div>
        }

    </div>
</div>
@section scripts{
    <script>
        if (localStorage.visitor >= 1) {
            localStorage.visitor = parseInt(localStorage.visitor) + 1;
        } else {
            var ziyaret = 0;

            ziyaret++;

            localStorage.visitor = ziyaret;
        }


    </script>

}

