@model Category
@{
    ViewData["Title"] = "AddCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">

    <div class="card">
        <div class="card-header">
            <strong>Katagori Ekleme </strong> Formu
        </div>
        <div class="card-body card-block">
            <form asp-controller="Admin" asp-action="AddCategory" method="post">
                <div class="form-group"><label asp-for="CategoryName" class=" form-control-label">Category Name</label><input asp-for="CategoryName" type="text" id="CategoryName" name="CategoryName" placeholder="Category Name" class="form-control"></div>
                <input asp-controller="Admin" asp-action="AddCategory" class="btn btn-success" type="submit" value="Submit">
            </form>
        </div>
    </div>
</div>

